@model CNPMNC.Models.CTDONHANG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa</h2>
<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
<style>
    .cangiua {
        margin: 0 auto;
        background: #bbbbb5;
        height: 482px;
        width: 397px;
        margin-top: 30px;
        margin-right: 600px;
        border-radius: 15px;
    }

    input.form-control {
        width: 335px;
        height: 41.6px;
    }
</style>
<div class="cangiua">
    <div style="width: 500px; height: 500px; padding: 30px 22px; color: black; background: #f4e2e2; border-radius: 15px;">
        <div class="card-header" style="text-align: center;font-size:20px;">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>CT Đơn Hàng</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @*@Html.LabelFor(model => model.IDDonHang, "IDDonHang", htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <label class="control-label col-md-2" for="IDDonHang">Nơiđi</label>
                    <div class="col-md-10">
                        @Html.DropDownList("IDDonHang", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IDDonHang, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @*@Html.LabelFor(model => model.IDShipper, "IDShipper", htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <label class="control-label col-md-2" for="IDShipper">Shipper</label>
                    <div class="col-md-10">
                        @Html.DropDownList("IDShipper", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IDShipper, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @*@Html.LabelFor(model => model.Mota, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <label class="control-label col-md-2" for="Mota">Môtả</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
                    </div>
                </div>

                    @Html.HiddenFor(model => model.IDCTDONHANG)

                <div class="form-group">
                    @*@Html.LabelFor(model => model.PhiShip, "PhiShip", htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <label class="control-label col-md-2" for="PhiShip">Phíship</label>
                    <div class="col-md-10">
                        @Html.DropDownList("PhiShip", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PhiShip, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @*@Html.LabelFor(model => model.DONGIA, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <label class="control-label col-md-2" for="DONGIA">Đơngiá</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DONGIA, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DONGIA, "", new { @class = "text-danger" })
                    </div>
                </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Lưu" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }


