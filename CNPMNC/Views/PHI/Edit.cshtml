@model CNPMNC.Models.PHI

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh Sửa</h2>
<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
<style>
    .cangiua {
        margin: 0 auto;
        background: #bbbbb5;
        height: 482px;
        width: 397px;
        margin-top: 30px;
        margin-right: 600px;
        border-radius: 15px;
    }

    input.form-control {
        width: 335px;
        height: 41.6px;
        margin: 0 auto;
    }
</style>
<div class="cangiua">
    <div style="width: 500px; height: 500px; padding: 30px 22px; color: black; background: #f4e2e2; border-radius: 15px;">
        <div class="card-header" style="text-align: center;font-size:20px;">

            <h4>Phí</h4>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.IDPhi)



                <div class="form-group">
                    @*@Html.LabelFor(model => model.Gia, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <label class="control-label col-md-2" for="Gia">Giá</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @*@Html.LabelFor(model => model.QuangDuong, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <label class="control-label col-md-2" for="QuangDuong">QĐ</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.QuangDuong, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.QuangDuong, "", new { @class = "text-danger" })
                    </div>
                </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Lưu" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }



            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
